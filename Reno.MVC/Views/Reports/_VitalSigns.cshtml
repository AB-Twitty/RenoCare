        <hr />
        <div class="row">

            <!--Dry Weight-->
            <div class="col-md-6">
                <label class="control-label col-md-12">
					Dry Weight
                    <span class=" font-12 control-label">- kg</span>
                    <span class="text-danger"> *</span>
                </label>
                
                <div class="col-md-12">
                    <input class="m-b form-control" />
                    <span class="text-danger"></span>
                </div>
            </div>

            <!--Heart Rate-->
            <div class="col-md-6">
                <label class="control-label col-md-12">
					Heart Rate
                    <span class=" font-12 control-label">- bpm</span>
                    <span class="text-danger"> *</span>
                </label>
                
                <div class="col-md-12">
                    <input class="m-b form-control" />
                    <span class="text-danger"></span>
                </div>
